<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tictactoe.rasmusandersen.tictactoe.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/line1"
        android:src="@drawable/vert_line"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tic9" /><![CDATA[
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    ]]>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/line2"
        android:src="@drawable/vert_line"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp" /><![CDATA[
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    ]]>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:src="@drawable/hori_line"
        android:layout_below="@+id/tic1"
        android:layout_alignEnd="@+id/tic9" />
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line4"
        android:src="@drawable/hori_line"
        android:layout_below="@+id/tic5"
        android:layout_alignEnd="@+id/tic6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic1"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic9"

        android:layout_below="@+id/line4"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic7"

        android:layout_below="@+id/line4"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic4"

        android:layout_below="@+id/line3"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic2"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tic5" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic6"

        android:layout_above="@+id/line4"
        android:layout_alignStart="@+id/tic9" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic8"

        android:layout_alignTop="@+id/tic9"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic5"

        android:layout_alignTop="@+id/tic4"
        android:layout_alignStart="@+id/tic8" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tic3"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tic6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TIC TAC TOE - THE REAL GAME!"
        android:id="@+id/textView"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />


</RelativeLayout>
